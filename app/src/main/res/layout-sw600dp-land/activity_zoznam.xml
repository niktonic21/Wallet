    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/Pozadie"
    tools:context="sk.upjs.ics.wallet.ZoznamActivity">

    <fragment
        android:id="@+id/fragment_zoznam"
        android:name="sk.upjs.ics.wallet.ZoznamFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <fragment
        android:id="@+id/fragment_detail"
        android:name="sk.upjs.ics.wallet.DetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

</LinearLayout>